@page
@model SupermarketWEB.Pages.Providers.CreateModel
@{
    ViewData["Title"]="Create";
}
<h1>Create New Provider</h1>

<h4>Provider</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Provider.FirstName" class="control-label"></label>
                <input asp-for="Provider.FirstName" class="form-control" />
                <span asp-validation-for="Provider.FirstName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Provider.PhoneNumber" class="control-label"></label>
                <input asp-for="Provider.PhoneNumber" class="form-control" />
                <span asp-validation-for="Provider.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Provider.Email" class="control-label"></label>
                <input asp-for="Provider.Email" class="form-control" />
                <span asp-validation-for="Provider.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Provider.Company " class="control-label"></label>
                <input asp-for="Provider.Company " class="form-control" />
                <span asp-validation-for="Provider.Company" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-outline-danger">Back to List</a>
            </div>
        </form>
    </div>
</div>

